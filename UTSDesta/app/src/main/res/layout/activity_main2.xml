<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="60dp"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONFIRMASI PENDAFTARAN"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>


    <TableLayout
        android:id="@+id/tl_konfirmasi_pendaftaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableRow android:padding="6dp">
        <TextView android:text="Nama Lengkap"/>
        <TextView
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:text="   :   "/>
        <TextView
            android:id="@+id/tv_nama_lengkap"
            android:text="isi nama lengkap"/>
    </TableRow>

    <TableRow android:padding="6dp">
        <TextView android:text="Nomor Pendaftaran"/>
        <TextView
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:text="   :   "/>
        <TextView
            android:id="@+id/tv_nomor_pendaftaran"
            android:text="isi nomor pendaftaran"/>
    </TableRow>

    <TableRow android:padding="6dp">
        <TextView android:text="Informasi Pendaftaran Dari:"/>
        <TextView
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:text="   :   "/>
        <TextView
            android:id="@+id/tv_info"
            android:text="isi info"/>

    </TableRow>
</LinearLayout>